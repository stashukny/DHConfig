<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DIM_FIELD</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CONFIG_COMMON_NAME, "CONFIG_COMMON_NAME", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CONFIG_COMMON_NAME", null, htmlAttributes: new { @class = "form-control", id =  "CONFIG_COMMON_NAME"})
                @Html.ValidationMessageFor(model => model.CONFIG_COMMON_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <script type="text/jscript">

            var callFunction = function () {
                $.getJSON('/DIM_FIELD/DIM_COMMON_NAME_List/' + $('#CONFIG_COMMON_NAME').val(), function (data) {
                    var items;                    
                    $.each(data, function (i, DIM_COMMON_NAME) {
                        items += "<option value='" + DIM_COMMON_NAME.Value + "'>" + DIM_COMMON_NAME.Text + "</option>";
                    });
                    $('#DIM_COMMON_NAME').html(items);
                });
            }

            $(function () {
                $('#CONFIG_COMMON_NAME')
                    .ready(callFunction)
                    .change(callFunction);
            });
        </script>

        <div class="form-group">
            @Html.LabelFor(model => model.DIM_COMMON_NAME, "DIM_COMMON_NAME", htmlAttributes: new { @class = "control-label col-md-2" })
