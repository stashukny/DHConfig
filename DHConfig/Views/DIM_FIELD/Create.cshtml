                <select class="form-control" id="DIM_COMMON_NAME" name="DIM_COMMON_NAME"></select>
                @Html.ValidationMessageFor(model => model.DIM_COMMON_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

